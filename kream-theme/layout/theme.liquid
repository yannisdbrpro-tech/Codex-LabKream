<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% if template.name == 'index' %}KREAM — Street-luxe reinvented{% elsif page_title %}{{ page_title }} — KREAM{% else %}KREAM{% endif %}</title>
  <meta name="description" content="KREAM builds street-luxe uniforms with ice discipline, silent dominance, and controlled scarcity.">
  {{ content_for_header }}
  <link rel="preconnect" href="https://cdn.shopify.com">
  <link rel="preload" href="{{ 'base.css' | asset_url }}" as="style">
  <link rel="stylesheet" href="{{ 'base.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
</head>
<body class="theme-body">
  <a class="skip-to-content" href="#MainContent">Skip to content</a>
  {% section 'header' %}
  <main id="MainContent" role="main">
    {{ content_for_layout }}
  </main>
  {% section 'footer' %}
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</body>
</html>
