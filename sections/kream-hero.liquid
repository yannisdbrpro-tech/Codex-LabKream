<section class="kream-section kream-hero" id="MainContent">
  <div class="kream-container kream-hero__grid">
    <div class="kream-hero__panel">
      <p class="kream-eyebrow">{{ section.settings.eyebrow }}</p>
      <h1 class="kream-heading">{{ section.settings.heading }}</h1>
      <p class="kream-subtext">{{ section.settings.subheading }}</p>
      <div style="margin-top: 28px; display: flex; gap: 16px; flex-wrap: wrap;">
        <a class="kream-button kream-button--premium" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
        <a class="kream-button" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
      </div>
    </div>
    <div class="kream-hero__media">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: section.settings.heading }}
      {% else %}
        <div style="padding: 40px; color: var(--kream-blue);">Quiet visuals, bold intention.</div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Kream Hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Dr3am It ? Hu2tle It ? Mater!al!ze!"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "KREAM builds slow heat for disciplined creators."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A silent, confident system for products designed by builders, strategists, and disciplined outsiders."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Explore drops"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "View lookbook"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    }
  ]
}
{% endschema %}
